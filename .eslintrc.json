{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": true,
				"useTabs": true,
				"jsxSingleQuote": false,
				"printWidth": 100,
				"tabWidth": 2,
				"trailingComma": "es5"
			}
		],
		// "react/jsx-filename-extension": {"extensions": [".js", ".jsx"]},
		// "allowExpressions": true,
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"func-names": "off",
		"no-unused-vars": "warn",
		"no-console": "off",
		"react/function-component-definition": "off"
	}
}
